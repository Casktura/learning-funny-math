<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.app.nsc.learningfunnymath.Bingo"
    android:background="@drawable/bg2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bingo_header"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nPlaying Numbers : "
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/playing_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/table_display"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4">
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="เวลา"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/time_display"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30dp" />
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nคะแนน"
            android:textIsSelectable="false"
            android:textSize="30dp" />
        <TextView
            android:gravity="center"
            android:id="@+id/score_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="ข้าม"
            android:onClick="skipButton"
            android:textStyle="bold"
            android:background="@drawable/btn_red"
            android:textSize="25dp"
            android:textColor="#ffffffff"/>
    </LinearLayout>

</LinearLayout>
